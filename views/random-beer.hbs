<div id="random">
    <img src="{{this.image_url}}" width="80px" height="200px">
    <div id="inside-random">
        <h2>{{this.name}}</h2>
        <p>{{this.description}}</p>
        <p>{{this.tagline}}</p>
        <h3>Food pairing</h3>
        <ul>
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><b>Brewers Tips: </b>{{this.brewers_tips}}</p>
    </div>
</div>